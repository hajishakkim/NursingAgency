CREATE TABLE `vaccancy` (
 `vaccancy_id` int(11) NOT NULL,
 `vaccancy_ref_number` int(11) NOT NULL,
 `vaccancy_date` date NOT NULL,
 `vaccancy_client` int(11) NOT NULL,
 `vaccancy_business_group` int(11) NOT NULL,
 `vaccancy_shift_type` int(11) NOT NULL,
 `vaccancy_job` int(11) NOT NULL,
 `vaccancy_break_time` date NOT NULL,
 `vaccancy_space` varchar(255) NOT NULL,
 `vaccancy_location` varchar(255) NOT NULL,
 `vaccancy_details` varchar(255) NOT NULL,
 `vaccancy_created_time` date NOT NULL,
 `vaccancy_updated_time` date NOT NULL,
 `vaccancy_created_by` int(11) NOT NULL,
 `vaccancy_updated_by` date NOT NULL,
 `vaccancy_active` int(11) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `agency`.`jobs` 
( `job_id` INT(11) NOT NULL AUTO_INCREMENT , 
`job_title` VARCHAR(500) NOT NULL , `job_client_id` INT(11) NOT NULL , 
`job_business_unit_id` INT(11) NOT NULL , `created_date` DATETIME NOT NULL , 
`job_status` TINYINT(1) NOT NULL DEFAULT '0' , PRIMARY KEY (`job_id`))
 ENGINE = InnoDB;

CREATE TABLE `vaccancy` (
  `vaccancy_id` int(11) NOT NULL AUTO_INCREMENT,PRIMARY KEY (`vaccancy_id`),
  `vaccancy_ref_number` int(11) NOT NULL,
  `vaccancy_date` date NOT NULL,
  `vaccancy_client` int(11) NOT NULL,
  `vaccancy_business_group` int(11) NOT NULL,
  `vaccancy_shift_type` int(11) NOT NULL,
  `vaccancy_job` int(11) NOT NULL,
  `vaccancy_break_time` date NOT NULL,
  `vaccancy_space` varchar(255) NOT NULL,
  `vaccancy_location` varchar(255) NOT NULL,
  `vaccancy_details` varchar(255) NOT NULL,
  `vaccancy_created_time` date NOT NULL,
  `vaccancy_updated_time` date NOT NULL,
  `vaccancy_created_by` int(11) NOT NULL,
  `vaccancy_updated_by` date NOT NULL,
  `vaccancy_active` int(11) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `candidates`(
    `candidate_id` INT(11) NOT NULL AUTO_INCREMENT,
    `candidate_fname` CHAR(10) NULL,
    `candidate_lname` CHAR(100) NULL,
    `candidate_title` CHAR(100) NULL,
    `candidate_gender` CHAR(10) NULL,
    `candidate_dob` DATE NULL,
    `candidate_address1` CHAR(255) NULL,
    `candidate_address2` CHAR(255) NULL,
    `candidate_address3` CHAR(255) NULL,
    `candidate_country` CHAR(25) NULL,
    `candidate_postcode` INT(15) NULL DEFAULT '0',
    `candidate_designation` CHAR(25) NULL,
    `candidate_dbs_pvg_number` INT(11) NULL DEFAULT '0',
    `candidate_dbs_pvg_date` DATE NULL ,
    `candidate_staff_id` CHAR(25) NULL,
    `candidate_payroll_id` CHAR(25) NULL,
    `candidate_email` CHAR(50) NULL,
    `candidate_pin_number` INT(25) NULL DEFAULT '0',
    `candidate_pin_expiry_date` DATE NULL,
    `candidate_phone_country_code` INT(10) NULL DEFAULT '0',
    `candidate_phone_number` INT(14) NULL DEFAULT '0',
    `candidate_mobile_country_code` INT(10) NULL DEFAULT '0',
    `candidate_mobile_phone_number` INT(14) NULL DEFAULT '0',
    `candidate_employment _type` CHAR(20) NULL,
    `candidate_status` TINYINT(1) NULL DEFAULT '1',
    `candidate_ni_number` INT(15) NULL DEFAULT '0',
    `candidate_passport_number` CHAR(25) NULL,
    `candidate_issueing _country` CHAR(25) NULL,
    `candidate_visit_type` CHAR(25) NULL,
    `created_date` TIMESTAMP NULL,
    PRIMARY KEY(`candidate_id`)
) ENGINE = INNODB DEFAULT CHARSET=utf8mb4;

