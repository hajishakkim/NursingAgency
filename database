DROP TABLE IF EXISTS `business_unit`;
CREATE TABLE `business_unit`
 ( `business_unit_id` INT(11) NOT NULL AUTO_INCREMENT , 
 `business_unit_name` VARCHAR(255) NULL ,
 PRIMARY KEY (`business_unit_id`)) ENGINE = InnoDB DEFAULT CHARSET=utf8mb4;
 
DROP TABLE IF EXISTS `job_role`;
 CREATE TABLE `job_role`(
    `job_role_id` INT(11) NOT NULL AUTO_INCREMENT,
    `job_role_category` varchar(100) NULL,
    `job_role_job_role` varchar(100) NULL,
    `job_role_created_date` TIMESTAMP NULL,
    `job_role_updated_time` TIMESTAMP NULL,
    `job_role_activity` TINYINT(1) NULL DEFAULT '1',
    PRIMARY KEY(`job_role_id`)
) ENGINE = INNODB DEFAULT CHARSET=utf8mb4;

DROP TABLE IF EXISTS `jobs`;
CREATE TABLE `jobs` (
  `jobs_id` int(11) NOT NULL AUTO_INCREMENT,
  `jobs_client` varchar(50)  DEFAULT NULL,
  `jobs_business_unit` varchar(255) DEFAULT NULL,
  `jobs_title` varchar(255) DEFAULT NULL,
  `jobs_activity` tinyint(1)  DEFAULT 1,
  `jobs_created_by` int(10) DEFAULT 0,
  `jobs_created_date` date NOT NULL,
  `jobs_updated_date` date NOT NULL,
  `jobs_updated_by` int(11) DEFAULT 0,
   PRIMARY KEY(`jobs_id`)
) ENGINE = MyISAM DEFAULT CHARSET=utf8mb4;
