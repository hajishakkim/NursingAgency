    `client_rate_saturday_day` varchar(25) NULL,
    `client_rate_saturday_night` varchar(25) NULL,
    `client_rate_sunday_day` varchar(25) NULL,
    `client_rate_sunday_night` varchar(25) NULL,
    `client_rate_public_holiday_day` varchar(25) NULL,
    `client_rate_public_holiday_night` varchar(25) NULL,
