    `client_rate_id` INT(11) NOT NULL AUTO_INCREMENT,
    `client_rate_client` varchar(100) NULL,
    `client_rate_business_unit` varchar(100) NULL,
    `client_rate_job` varchar(100) NULL,
    `client_rate_week_days` varchar(25) NULL,
    `client_rate_night_time` varchar(25) NULL,
