    `staff_rate_night_time` varchar(25) NULL,
    `staff_rate_friday_night` varchar(25) NULL,
    `staff_rate_saturday_day` varchar(25) NULL,
    `staff_rate_saturday_night` varchar(25) NULL,
    `staff_rate_sunday_day` varchar(25) NULL,
